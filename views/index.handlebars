<div class="container">
  <div class="jumbotron"><img src="https://media3.giphy.com/media/dQlgY0IcJ1snOpTpKX/source.gif" alt="bouncing burger gif" id="burger">
  <h1 id="title">Let's make burger a burger checklist!</h1></div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm">

      <h4>Burgers to be devoured!</h4>

      <ul>
        {{#each burgers}}
        {{#unless eaten}}
        {{> burgers/burger-block eaten=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm">

      <h1>Dream Burgers!</h1>

      <h4>Add a Burger</h4>
      <form class="create-form">

        <div class="form-group">
          <label for="burg">Dream Burger:</label><br>
          <input type="text" id="burg" name="burger">
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
    <div class="col-sm">
      <h4>Burgers have been devoured!</h4>

      <ul>
        {{#each burgers}}
        {{#if eaten}}
        {{> burgers/burger-block eaten=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
</div>